{
	"name": "server",
	"version": "1.0.0",
	"main": "server/dist/js/app.js",
	"license": "MIT",
	"dependencies": {
		"@types/node-fetch": "^2.5.8",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-graphql": "^0.12.0",
		"graphql": "^15.5.0",
		"graphql-request": "^3.4.0"
	},
	"scripts": {
		"setup": "npm install && cd client && npm install",
		"build:client": "cd client && npm run build",
		"build:server": "cd server && tsc",
		"build": "concurrently --kill-others-on-fail \"npm run build:client\" \"npm run build:server\"",
		"start": "node server/dist/js/app.js",
		"server": "nodemon server/dist/js/app.js",
		"client": "cd client && npm run start",
		"dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
		"postinstall": "cd client/src && npm install && npm run build"
	},
	"devDependencies": {
		"@types/express": "^4.17.11",
		"@types/node": "^14.14.35"
	}
}
